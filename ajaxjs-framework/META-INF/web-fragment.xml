<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	version="3.0">
	<name>ajaxjs_framework_WebFragment</name>

	<!-- 没权限提示 -->
 	<servlet>
		<servlet-name>guest</servlet-name>
		<jsp-file>/WEB-INF/jsp/user/guest.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>guest</servlet-name>
		<url-pattern>/guest/</url-pattern>
	</servlet-mapping>
	<!-- // -->
	
	<!-- 全局搜索 -->
 	<servlet>
		<servlet-name>global_search</servlet-name>
		<jsp-file>/WEB-INF/jsp/pages/search_result.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>global_search</servlet-name>
		<url-pattern>/global_search/</url-pattern>
	</servlet-mapping>
	<!-- // -->
	
	 <!-- 配置Session失效时间 -->  
	<session-config>  
	        <session-timeout>90</session-timeout>  
	</session-config> 
</web-fragment>