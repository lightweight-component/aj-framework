<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE Context>
<Context>
    <!-- jdbc/sqlite 为开发环境使用的配置，一般为 windows/mac 的路径 -->
    <Resource 
        name="jdbc/mysql" 
        auth="Container" 
        type="javax.sql.DataSource"
        maxActive="100" maxIdle="30" maxWait="10000" 
        username="root" password="root" 
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://10.0.2.9/ng_asset?useUnicode=true&amp;characterEncoding=UTF-8&amp;useSSL=false" />

    <!-- jdbc/sqlite_deploy 为生产环境使用的配置，一般为 linux 的路径 -->
    <Resource 
        name="jdbc/sqlite_deploy" 
        auth="Container" 
        type="javax.sql.DataSource"
        maxActive="100" maxIdle="30" maxWait="10000" 
        username="user2" password="password1" 
        driverClassName="org.sqlite.JDBC"
        url="jdbc:sqlite:/data/tomcat/gdzbt/META-INF/gdzbt.sqlite" />
        
    <Resource 
        name="jdbc/sqlite_mac" 
        auth="Container" 
        type="javax.sql.DataSource"
        maxActive="100" maxIdle="30" maxWait="10000" 
        username="user2" password="password1" 
        driverClassName="org.sqlite.JDBC"
        url="jdbc:sqlite:/Users/xinzhang/dev/new/ajaxjs-cms/WebContent/META-INF/database.sqlite" />
        
</Context>