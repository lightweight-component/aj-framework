<Context>
	<!-- jdbc/sqlite 为开发环境使用的配置，一般为 Windows/MAC 的路径 -->
	<Resource 
		name="jdbc/sqlite" 
		auth="Container" 
		type="javax.sql.DataSource"
		maxActive="100" maxIdle="30" maxWait="10000" 
		username="user2" password="password1" 
		driverClassName="org.sqlite.JDBC"
		url="jdbc:sqlite:/Users/xinzhang/dev/project/grand/WebContent/META-INF/database.sqlite" />

	<!-- jdbc/sqlite_deploy 为生产环境使用的配置，一般为 linux 的路径 -->
	<Resource 
		name="jdbc/sqlite_deploy" 
		auth="Container" 
		type="javax.sql.DataSource"
		maxActive="100" maxIdle="30" maxWait="10000" 
		username="user2" password="password1" 
		driverClassName="org.sqlite.JDBC"
		url="jdbc:sqlite:/home/tomcat/webapps/grand/META-INF/database.sqlite" />
</Context>