<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>aj-developer-tools</artifactId>
    <version>1.1</version>
    <description>开发者工具</description>
    <name>aj-developer-tools</name>

    <parent>
        <groupId>com.ajaxjs</groupId>
        <artifactId>aj-common-parent</artifactId>
        <version>1.2</version>
        <relativePath/>
    </parent>

    <build>
        <plugins>
            <!-- 生成 META-INF/MANIFEST.MF 文件的部分内容 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <!-- 这里是项目主类运行入口 -->
                            <mainClass>com.ajaxjs.developertools.DevToolsApplication</mainClass>
                        </manifest>
                        <manifestEntries>
                            <!--MANIFEST.MF 中 Class-Path 加入资源文件目录 -->
                            <Class-Path>lib/jmxtools-1.2.1.jar lib/tools-1.0.jar</Class-Path>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <!--一键部署到服务器 SSH-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>wagon-maven-plugin</artifactId>
                <version>2.0.2</version>

                <executions>
                    <execution>
                        <id>upload-deploy</id>
                        <!-- 运行package打包的同时运行upload-single和sshexec -->
                        <phase>package</phase>
                        <goals>
                            <goal>upload-single</goal>
                            <goal>sshexec</goal>
                        </goals>
                        <configuration>
                            <!-- 指定 SSH 账号 -->
                            <serverId>usa.ajaxjs.com</serverId>
                            <!-- 要更新的 jar 包 -->
                            <fromFile>target/aj-developer-tools.jar</fromFile>
                            <!-- 服务器部署位置 -->
                            <url>${ssh.url.dev}</url>
                            <!-- 重启脚本 先切换目录，才能正确执行脚本 -->
                            <commands>
                                <command>cd /home/service/aj-developer-tools;./startup.sh</command>
                            </commands>
                            <!-- 显示运行命令的输出结果 -->
                            <displayCommandOutputs>true</displayCommandOutputs>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.12.7.1</version>
        </dependency>

        <!-- 认证 SDK -->
        <dependency>
            <groupId>com.ajaxjs</groupId>
            <artifactId>aj-iam-client</artifactId>
            <version>1.0</version>
        </dependency>

        <!-- 系统监控 -->
        <dependency>
            <groupId>com.github.oshi</groupId>
            <artifactId>oshi-core</artifactId>
            <version>6.1.5</version>
        </dependency>

        <!-- JVM 监控 -->
        <!-- 有版权，所以 Maven 仓库基本都下架了 jmxtool -->
        <dependency>
            <groupId>com.sun.jdmk</groupId>
            <artifactId>jmxtools</artifactId>
            <version>1.2.1</version>
            <scope>system</scope>
            <systemPath>${basedir}/jar/jmxtools-1.2.1.jar</systemPath>
        </dependency>

        <!-- JVM 监控 -->
        <dependency>
            <groupId>com.sun</groupId>
            <artifactId>tools</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>D:/dev/jdk1.8.0_181/lib/tools.jar</systemPath>
        </dependency>

        <!-- 监控用 -->
        <!--  <dependency>
              <groupId>org.apache.tomcat</groupId>
              <artifactId>tomcat-catalina-jmx-remote</artifactId>
              <version>8.5.75</version>
              <type>jar</type>
          </dependency>-->
    </dependencies>
</project>